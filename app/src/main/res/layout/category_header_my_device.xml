<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <com.service.easyservice.widgets.TextViewOpenSansBold
        android:id="@+id/tvCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_20"
        android:paddingStart="@dimen/margin_20"
        android:text="Mobile"
        android:textColor="@color/black"
        android:textSize="@dimen/text_18px" />

    <View
        android:id="@+id/viewCategorySeparator"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:paddingLeft="@dimen/margin_20"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_20"
        android:background="@color/device_category_separator"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tvCategory"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"></View>


</RelativeLayout>