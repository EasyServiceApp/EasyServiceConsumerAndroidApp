<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_address_map"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.service.easyservice.AddressMapActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tvFooter"
        tools:context="com.testpinapp.MainActivity" />

    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_40"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:background="@drawable/rectangle_map_address_border"
        android:gravity="center"
        android:minLines="3"
        android:textColor="@color/white"
        android:padding="@dimen/margin_10"
        android:text="Address" />

    <com.service.easyservice.widgets.TextViewOpenSansRegular
        android:id="@+id/tvFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/footer"
        android:drawablePadding="@dimen/margin_10"
        android:gravity="center"
        android:paddingLeft="@dimen/margin_10"
        android:text="Select Address"
        android:textColor="@color/white"
        android:textSize="@dimen/text_25px" />

</RelativeLayout>
