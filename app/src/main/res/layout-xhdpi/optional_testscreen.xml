<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/App_background"
    android:orientation="vertical"
    tools:context="com.sdk.sampleapp.TestActivity"
    android:id="@+id/optional_testscreen">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mandatory_test"
        android:id="@+id/textViewMandatoryTests"
        android:layout_marginTop="76dp"
        android:textSize="55px"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewCheck"
        android:layout_below="@+id/textViewMandatoryTests"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_done"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/complete"
        android:id="@+id/textViewCompleted"
        android:textSize="47px"
        android:textColor="#ffffff"
        android:layout_below="@+id/imageViewCheck"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewContinue"
        android:src="@drawable/btn_continue"
        android:layout_below="@+id/textViewCompleted"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewFinish"
        android:src="@drawable/btn_finishtest"
        android:layout_below="@+id/imageViewContinue"
        android:layout_alignLeft="@+id/imageViewContinue"
        android:layout_alignStart="@+id/imageViewContinue" />


</RelativeLayout>